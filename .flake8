[flake8]
max-line-length = 88
extend-ignore =
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501   # line too long (handled by black)
exclude =
    __pycache__,
    .git,
    .github,
    venv,
    env,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py:F401
max-complexity = 10
